@{
    ViewData["Title"] = "Product Edit";
}

@model SportsPro.Models.Product

<div>

    <h1>Edit Product</h1>
    <form asp-action="Update" asp-controller="Product" asp-route-id="0">
        
         <input type="hidden" class="form-control" id="ProductID" name="ProductID" value=" @Model.ProductID" />
        <div class="form-group">
            <label for="ProductCode"></label>
            <input class="form-control" id="ProductCode" name="ProductCode" value=" @Model.ProductCode"/>
        </div>
        <div class="form-group">
            <label for="Name"></label>
            <input class="form-control" id="Name" name="Name" value="@Model.Name" />
        </div>
        <div class="form-group">
            <label for="YearlyPrice"></label>
            <input class="form-control" id="YearlyPrice" name="YearlyPrice" value="@Model.YearlyPrice" />
        </div>
        <div class="form-group">
            <label for="ReleaseDate"></label>
            <input class="form-control" id="ReleaseDate" name="ReleaseDate" value="@Model.ReleaseDate" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary" role="button">Cancel</a>
        </div>
    </form>
</div>