@{
    ViewData["Title"] = "Home";
}
@model List<SportsPro.Models.Product>
<div>
    <h1>Product Manager</h1>
    <table class="table table-striped table-striped">
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Release Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <th scope="row">@product.ProductCode</th>
                    <td>@product.Name</td>
                    <td>$@product.YearlyPrice</td>
                    <td>@product.ReleaseDate</td>
                    <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-primary" role="button">Edit</a></td>
                    <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-primary" role="button">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary" role="button">Create</a>


</div>

