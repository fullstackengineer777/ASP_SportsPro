@{
    ViewData["Title"] = "Technician Edit";
}

@model SportsPro.Models.Technician

<div>

    <h1>Edit Technician</h1>
    <form asp-action="Update" asp-controller="Technician" asp-route-id="0">

        <input type="hidden" class="form-control" id="TechnicianID" name="TechnicianID" value="@Model.TechnicianID" />
        <div class="form-group">
            <label for="Name"></label>
            <input class="form-control" id="Name" name="Name" value=" @Model.Name" />
        </div>
        <div class="form-group">
            <label for="Email"></label>
            <input class="form-control" id="Email" name="Email" value="@Model.Email" />
        </div>
        <div class="form-group">
            <label for="Phone"></label>
            <input class="form-control" id="Phone" name="Phone" value="@Model.Phone" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Technician" asp-action="Index" class="btn btn-primary" role="button">Cancel</a>
        </div>
    </form>
</div>