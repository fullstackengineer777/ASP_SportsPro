@{
    ViewData["Title"] = "Customer";
}
@model List<SportsPro.Models.Customer>
<div>
    <h1>Customer Manager</h1>
    <table class="table table-striped table-striped">
        <thead>
            <tr>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">PostalCode</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Country</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Address</td>
                    <td>@customer.City</td>
                    <td>@customer.State</td>
                    <td>@customer.PostalCode</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Email</td>
                    <td>@customer.CountryID</td>

                    <td><a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-primary" role="button">Edit</a></td>
                    <td><a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-primary" role="button">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Customer" asp-action="Create" class="btn btn-primary" role="button">Create</a>


</div>
